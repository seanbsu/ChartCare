@page
@using ChartCareMVC.Models
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-4">
    <div class="row">
        <!-- Left Column: Registration Form -->
        <div class="col-sm-12 col-md-6 col-lg-6 d-flex align-items-center">
            <div class="form-register border p-4 rounded shadow w-100" >
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <h2>Create a new account.</h2>
                    <div class="disclaimer-registration">
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-asterisk" viewBox="0 0 16 16">
                                <path d="M8 0a1 1 0 0 1 1 1v5.268l4.562-2.634a1 1 0 1 1 1 1.732L10 8l4.562 2.634a1 1 0 1 1-1 1.732L9 9.732V15a1 1 0 1 1-2 0V9.732l-4.562 2.634a1 1 0 1 1-1-1.732L6 8 1.438 5.366a1 1 0 0 1 1-1.732L7 6.268V1a1 1 0 0 1 1-1"></path>
                            </svg>
                            This is for Coporate registration only. Employee registration handled by company admin accounts

                        </p>
                    </div>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input  asp-for="Input.CompanyName"  class="form-control" autocomplete="organization" aria-required="true" placeholder="company name" />
                        <label  asp-for="Input.CompanyName" >Company Name</label>
                        <span  asp-validation-for="Input.CompanyName"  class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input  asp-for="Input.CompanyAddress"  class="form-control" autocomplete="street-address" aria-required="true" placeholder="address" />
                        <label  asp-for="Input.CompanyAddress" >Address</label>
                        <span  asp-validation-for="Input.CompanyAddress"  class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <select asp-for="Input.PricingPlanID" class="form-control" aria-required="true">
                            @if (ViewData["PricingPlans"] is List<PricingPlan> pricingPlans && pricingPlans.Count > 0)
                            {
                                @foreach (var plan in pricingPlans)
                                {
                                    <option value="@plan.ID">@plan.PlanNameString</option>
                                }
                            }
                            else
                            {
                                <option value="">No pricing plans available</option>
                            }
                        </select>
                        <label asp-for="Input.PricingPlanID">Pricing Plan</label>
                        <span asp-validation-for="Input.PricingPlanID" class="text-danger"></span>
                    </div>


                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
        </div>

